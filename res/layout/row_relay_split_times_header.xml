	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/table_split_times_header_genoa"
	android:orientation="horizontal" >

	<TextView
		style="@style/tvStyleSplitTableHeader"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="11"
		android:gravity="center"
		android:text="@string/relay_leg_text" />

	<TextView
		style="@style/tvStyleSplitTableHeader"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="30"
		android:gravity="center"
		android:text="@string/athlete_text" />

	<TextView
		style="@style/tvStyleSplitTableHeader"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="25"
		android:gravity="center"
		android:text="@string/event_text" />

	<TextView
		style="@style/tvStyleSplitTableHeader"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="20"
		android:gravity="center"
		android:text="@string/splits_text" />

</LinearLayout>