<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppBaseTheme" parent="android:Theme.Light"></style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="btnStyle" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">0.6</item>
		<item name="android:background">@drawable/btn_genoa</item>
		<item name="android:padding">@dimen/btnPadding</item>
	</style>

	<style name="btnStyle.Genoa">
		<item name="android:background">@drawable/btn_genoa</item>
	</style>

	<style name="btnStyle.OkFinished">
		<item name="android:background">@drawable/btn_opal</item>
	</style>

	<style name="btnStartSplitStop" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/btnStartSplitStopTextSize</item>
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">0.6</item>
		<item name="android:padding">@dimen/btnStartSplitStopPadding</item>
	</style>

	<style name="btnStartSplitStop.Start">
		<item name="android:background">@drawable/btn_start</item>
	</style>

	<style name="btnStartSplitStop.Split">
		<item name="android:background">@drawable/btn_split</item>
	</style>

	<style name="btnStartSplitStop.Stop">
		<item name="android:background">@drawable/btn_stop</item>
	</style>

	<style name="tvCenterBoldShadow">
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">0.6</item>
	</style>

	<style name="tvCenterBoldShadow.BlackText">
		<item name="android:textColor">@color/black</item>
		<item name="android:shadowColor">@color/white</item>
	</style>

	<style name="tvCenterBoldShadow.WhiteText">
		<item name="android:textColor">@color/white</item>
		<item name="android:shadowColor">@color/black</item>
	</style>

	<style name="tvCenterBoldShadow.BlackText.BestTimesDivider">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:padding">@dimen/tvBestTimesDividerPadding</item>
		<item name="android:background">@drawable/btn_beige</item>
	</style>

	<style name="tvCenterBoldShadow.BlackText.EventTitle">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:padding">@dimen/frag_create_event_textview_vertical_spacing</item>
		<item name="android:background">@drawable/rec_bkgrd_smoke_white_stroke_black</item>
	</style>

	<style name="tvStyleRaceTimer" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/TextSizeRaceTimer</item>
		<item name="android:textColor">#004254</item>
		<item name="android:gravity">center|center_vertical</item>
		<item name="android:layout_marginBottom">@dimen/raceTimer_vertical_margin</item>
		<item name="android:paddingBottom">@dimen/raceTimer_vertical_margin</item>
		<item name="android:paddingTop">@dimen/raceTimer_vertical_margin</item>
		<item name="android:background">@drawable/rec_bkgrd_smoke_white_stroke_black</item>
	</style>

	<style name="tvStyleListViewRow" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/rec_bkgrd_smoke_white_no_stroke</item>
		<item name="android:padding">@dimen/listViewRowPadding</item>
	</style>

	<style name="tvCenterBoldShadow.WhiteText.GenoaListViewRow">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:padding">@dimen/listViewRowPadding</item>
		<item name="android:background">@drawable/btn_genoa</item>
	</style>

	<style name="tvCenterBoldShadow.WhiteText.GenoaSquareHeader">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:padding">@dimen/listViewRowPadding</item>
		<item name="android:background">@drawable/table_split_times_header_genoa</item>
	</style>

	<style name="tvCenterVerticalRow">
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/rec_bkgrd_smoke_white_no_stroke</item>
		<item name="android:paddingLeft">@dimen/listViewRowPadding</item>
		<item name="android:paddingRight">@dimen/listViewRowPadding</item>
		<item name="android:paddingTop">@dimen/listViewRowPadding</item>
		<item name="android:paddingBottom">0dp</item>
	</style>

	<style name="tvCenterVerticalRow.BlackText">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="tvCenterVerticalRow.BlackText.Normal">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="tvCenterVerticalRow.BlackText.Bold">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="tvCenterVerticalRow.BlackText.Italic">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="tvCenterBoldShadow.WhiteText.SeperatorRow">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:padding">@dimen/separatorRowPadding</item>
		<item name="android:background">@drawable/table_split_times_header_genoa</item>
	</style>

	<style name="tvCenterVerticalRow.BlackText.Normal.Title">
		<item name="android:paddingLeft">@dimen/titleRowHorizonalPadding</item>
		<item name="android:paddingTop">@dimen/titleRowVerticalPadding</item>
		<item name="android:paddingBottom">@dimen/titleRowVerticalPadding</item>
	</style>

	<style name="tvSplitTable" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/TextSizeSplitTable</item>
		<item name="android:gravity">center|center_vertical</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_marginLeft">@dimen/splitsTableLeftMargin</item>
		<item name="android:layout_marginRight">@dimen/splitsTableRightMargin</item>
		<item name="android:paddingLeft">@dimen/splitsTableLeftPadding</item>
		<item name="android:paddingRight">@dimen/splitsTableRightPadding</item>
	</style>

	<style name="tvSplitTable.BlackText">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="tvSplitTable.WhiteText">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="tvSplitTable.WhiteText.Genoa">
		<item name="android:background">@drawable/table_split_times_header_genoa</item>
	</style>

	<style name="txtStyleLinen" parent="@android:style/Widget.EditText">
		<item name="android:textSize">@dimen/TextSizeNormal</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#000000</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:shadowColor">#FFFFFF</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">0.6</item>
		<item name="android:background">@drawable/rec_bkgrd_linen_stroke_black</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="txtStyleDialogEntry" parent="@android:style/Widget.EditText">
		<item name="android:textSize">@dimen/TextSizeDialog</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingTop">@dimen/dialogEntryTopPadding</item>
		<item name="android:paddingBottom">@dimen/dialogEntryBottomPadding</item>
		<item name="android:paddingLeft">@dimen/dialogEntryLeftPadding</item>
		<item name="android:paddingRight">@dimen/dialogEntryRightPadding</item>
	</style>

	<style name="tvStyleDialogMessage" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/TextSizeDialog</item>
		<item name="android:textStyle">normal</item>
		<item name="android:gravity">left</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:padding">@dimen/dialogMessagePadding</item>
	</style>

	<style name="tvStyleHelpText" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/TextSizeHelp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:gravity">left</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:background">#FFD3D3D3</item>
		<item name="android:padding">@dimen/helpTextPadding</item>
	</style>

</resources>